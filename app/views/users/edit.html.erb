<h2>プロフィール編集</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>

  <!-- ここからコードを書きましょう -->
  <% if @user.profile_image.attached? %>
    <%= image_tag @user.profile_image, size: '60x60' %>
  <% else %>
    <%= image_tag 'no_image.jpg', size: '60x60' %>
  <% end %>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像" %>
  <!-- ここまでのあいだにコードを書きましょう -->

  <%= f.submit "変更を保存" %>
<% end %>