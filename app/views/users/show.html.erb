<div class="profile-container w-75 d-flex mx-auto justify-content-around align-items-center border-bottom py-5">
  <% if @user.profile_image.attached? %>
    <%= image_tag @user.profile_image, size: '100x100', class: "attachment user profile_image rounded-circle" %>
  <% else %>
    <%= image_tag 'no_image.jpg', size: '100x100', class: "attachment user profile_image rounded-circle" %>
  <% end %>
  <h5 class="profile-name display-4"><%= @user.name %></h5>
  <div class="mt-auto">
    <% if @user.id == current_user.id %>
      <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "text-dark" %></p>
    <% end %>
  </div>
</div>

<%= render 'post_images/list', post_images: @post_images %>