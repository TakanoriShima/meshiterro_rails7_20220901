<div>
  <% if @post_image.image.attached? %>
    <%= image_tag @post_image.image %>
  <% end %>
  <p>ショップ名：<%= @post_image.shop_name %></p>
  <p>説明：<%= @post_image.caption %></p>
  <p>ユーザーネーム：<%= @post_image.user.name %></p>
  <p>投稿日時：<%= @post_image.created_at.strftime('%Y/%m/%d') %></p>
  <!-- 以下を追加してください -->
  <% if @post_image.user == current_user %>
    <%= link_to '削除', post_image_path(@post_image), data: { turbo_method: :delete } %>  
  <% end %>
  
  <!-- ここからコードを書きましょう -->
  <% if @post_image.favorited_by?(current_user) %>
    <p>
      <%= link_to post_image_favorites_path(@post_image), data: { turbo_method: :delete} do %>
        ♥<%= @post_image.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to post_image_favorites_path(@post_image),  data: { turbo_method: :post} do %>
        ♡<%= @post_image.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>
  <!-- ここまでのあいだにコードを書きましょう -->
  
</div>


<!-- ここからコードを書きましょう -->
<div>
  <p>コメント件数：<%= @post_image.post_comments.count %></p>
  <% @post_image.post_comments.each do |post_comment| %>
    <p><%= image_tag('sample-author1.jpg') %></p>
    <%= post_comment.user.name %>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
    <!-- ここからコードを書きましょう -->
    <% if post_comment.user == current_user %>
    <div>
      <%= link_to "削除", post_image_post_comment_path(post_comment.post_image, post_comment), data: { turbo_method: :delete } %>
    </div>
    <% end %>
    <!-- ここまでのあいだにコードを書きましょう -->
  <% end %>
</div>

<div>
  <%= form_with(model:[@post_image, @post_comment], local: true) do |f| %>
    <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>
<!-- ここまでのあいだにコードを書きましょう -->